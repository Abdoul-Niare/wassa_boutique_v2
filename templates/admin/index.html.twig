{% extends "base.html.twig" %}

{% block title %}Administration{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% include "_component/_adminnav.html.twig" %}
            <main class="col-9 border border-red bg-white p-2">
               
                <section class="row">
			<div class="col-12">
				<h1>Wassa_Boutique</h1>
				<p>Bienvenue dans votre boutique preféré!</p>
			</div>

			{% for category in categories %}
				{% if category.parent == null %}
					<div class="col-12">
						<h2>{{ category.name }}</h2>
					</div>
				{% else %}
					<div class="col-4">
						<div class="card h-100">
							<div class="card-body">
								<h3 class="card-title">{{ category.name }}</h3>
								<a href="{{ path('categories_list', {slug: category.slug}) }}" class="btn btn-primary">Voir les produits</a>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</section>


            </main>
        </div>
    </div>
{% endblock %}