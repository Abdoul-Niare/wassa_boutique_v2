{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}

	<main class="container">
		<section class="row">
			{% include "_component/_adminnav.html.twig" %}
			<div class="col-9">
				<h1>Categories</h1>

				<table class="table">
					<tbody>
						<tr>
							<th>Categories Parent</th>
							<td>{{ category.parent }}</td>
						</tr>
						<tr>
							<th>Name</th>
							<td>{{ category.name }}</td>
						</tr>
						<tr>
							<th>CategoryOrder</th>
							<td>{{ category.categoryOrder }}</td>
						</tr>
						<tr>
							<th>Slug</th>
							<td>{{ category.slug }}</td>
						</tr>
					</tbody>
				</table>

				<a href="{{ path('admin_categories_index') }}" class="btn btn-primary">Retour</a>
			</div>
		</section>
	</main>
{% endblock %}
