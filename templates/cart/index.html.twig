{% extends 'base.html.twig' %}

{% block title %}Votre panier
{% endblock %}

{% block body %}
	<main class="container h-100">
		<section class="bg-light p-3">
			<h1>Votre Panier</h1>
		</section>
		<section class="row">
			<table class="table">
				<thead>
					<tr>
						<th>Produit</th>
						<th>Prix</th>
						<th>Quantité</th>
						<th>Total</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for element in dataPanier %}
						<tr>
							<td>{{ element.produit.name }}</td>
							<td class="text-reight">{{ element.produit.price }}
								€</td>
							<td>{{ element.quantite }}</td>
							<td class="text-reight">{{ element.quantite * element.produit.price }}
								€</td>


							<td>
								{% if element.produit.stock > 0 %}
									<a href="{{path("cart_add", {id: element.produit.id})}}" class="btn btn-success">
										<i class="bi bi-cart-plus"></i>
									</a>
									<a href="{{path("cart_remove", {id: element.produit.id})}}" class="btn btn-warning">
										<i class="bi bi-cart-dash"></i>
									</a>
									<a href="{{path("cart_delete", {id: element.produit.id})}}" class="btn btn-danger">
										<i class="bi bi-cart-x"></i>
									</a>

								{% else %}
									<p class="text-danger">Stock epuisé</p>
									<a href="{{path("cart_remove", {id: element.produit.id})}}" class="btn btn-warning">
										<i class="bi bi-cart-dash"></i>
									</a>
									<a href="{{path("cart_delete", {id: element.produit.id})}}" class="btn btn-danger">
										<i class="bi bi-cart-x"></i>
									</a>
								{% endif %}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5" class="text-center">Votre panier est vide</td>
						</tr>
					{% endfor %}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="3">Total</td>
						<td class="text-reight">{{ total }}
							€</td>
						<td>
							<a href="{{path("cart_delete_all")}}" class="btn btn-danger">
								<i class="bi bi-cart-x"></i>
							</a>
						</td>
					</tr>
				</tfoot>
			</table>
		</section>
	</main>
{% endblock %}
